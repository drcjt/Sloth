<Window x:Class="SlothPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlothPad"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" AcceptsReturn="True" Name="SourceCode"/>
        <StackPanel Grid.Column="1">
            <Button Click="Button_Click">Refresh Syntax Tree</Button>
            <TextBlock Grid.Column="1" Name="AST"/>
        </StackPanel>
    </Grid>
</Window>
